<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <!--顶部头像等个人信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#33475f"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/padding_size_10" >

                    <LinearLayout
                        android:id="@+id/llPic"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_Size20"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/ivUserHead"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="center"
                            android:background="@drawable/shape_round_img"
                            android:src="@mipmap/ic_launcher" />

                        <LinearLayout
                            android:id="@+id/llNameAndAddressBord"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_size_5"
                            android:visibility="visible" >

                            <TextView
                                android:id="@+id/tvUserName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="登录/注册"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/margin_Size16" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/btnLogin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_Size5"
                            android:background="@drawable/search_shape"
                            android:gravity="center"
                            android:paddingBottom="5dip"
                            android:paddingLeft="10dip"
                            android:paddingRight="10dip"
                            android:paddingTop="5dip"
                            android:text="登录/注册"
                            android:textColor="#444444"
                            android:textSize="@dimen/textSize_16"
                            android:visibility="gone" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rlNews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/margin_Size3"
                        android:layout_marginTop="@dimen/margin_Size3"
                        android:paddingBottom="@dimen/padding_size_8"
                        android:paddingLeft="@dimen/padding_size_15"
                        android:paddingRight="@dimen/padding_size_7"
                        android:paddingTop="@dimen/padding_size_7" >

                        <RelativeLayout
                            android:layout_width="25dip"
                            android:layout_height="25dip" >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:visibility="gone"
                                android:src="@drawable/search" />
                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/iv_red_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:visibility="gone"
                            android:src="@drawable/search" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/llSetting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/padding_size_8"
                        android:paddingLeft="@dimen/padding_size_10"
                        android:paddingRight="@dimen/padding_size_15"
                        android:paddingTop="@dimen/padding_size_10" >

                        <ImageView
                            android:layout_width="25dip"
                            android:layout_height="25dip"
                            android:gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/search"
                            android:visibility="gone" />
                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>
            <!--邮箱手机号修改密码关于等信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dip" >

                <LinearLayout
                        android:id="@+id/ll_conn_email"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="50dip"
                        android:background="#ffffff" >

                        <ImageView
                            android:id="@+id/iv_email"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_Size20"
                            android:src="@drawable/email" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:text="关联邮箱"
                            android:textColor="#444444"
                            android:textSize="@dimen/textSize_16" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="10dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/right_arrow" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_conn_phone"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="50dip"
                    android:background="#ffffff" >

                    <ImageView
                        android:id="@+id/iv_phone"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_Size20"
                        android:src="@drawable/phone" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="关联手机号"
                        android:textColor="#444444"
                        android:textSize="@dimen/textSize_16" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="centerInside"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/right_arrow" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_change_pwd"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="50dip"
                    android:background="#ffffff" >

                    <ImageView
                        android:id="@+id/iv_change_pwd"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_Size20"
                        android:src="@drawable/change_pwd" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="修改登录密码"
                        android:textColor="#444444"
                        android:textSize="@dimen/textSize_16" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/right_arrow" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_about_us"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="50dip"
                    android:background="#ffffff" >

                    <ImageView
                        android:id="@+id/iv_about_us"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_Size20"
                        android:src="@drawable/about_us" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="关于我们"
                        android:textColor="#444444"
                        android:textSize="@dimen/textSize_16" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/right_arrow" />
                </LinearLayout>
                <!--<LinearLayout
                    android:id="@+id/rlAllOrder"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="50dip"
                    android:background="#ffffff" >

                    <ImageView
                        android:id="@+id/ivAllOrders"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_Size20"
                        android:src="@drawable/search" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="全部订单"
                        android:textColor="#444444"
                        android:textSize="@dimen/textSize_16" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/right_arrow" />
                </LinearLayout>-->








                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="bottom"
                            android:layout_alignParentBottom="true"
                            android:gravity="bottom"
                            android:visibility="gone"
                            android:text="退出登录"/>
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>