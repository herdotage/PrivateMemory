<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_gravity="center"
    android:layout_height="match_parent">
    <!--<com.example.lpc.viewpagersample.view.TopMenu
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/new_password_top_menu"
        android:layout_width="match_parent"
        android:gravity="center_vertical|center"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        custom:centerText="新建密码记录"
        custom:leftImg="@drawable/title_btn_back"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        custom:rightImg="@drawable/title_btn_menu"
        android:layout_height="44dp">

    </com.example.lpc.viewpagersample.view.TopMenu>-->

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="#ffffff"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/margin_Size16"
            android:paddingRight="@dimen/margin_Size16"
            android:src="@drawable/title_btn_back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新建密码记录"
            android:textColor="#444444"
            android:textSize="@dimen/textSize_17"
            />

        <ImageView
            android:id="@+id/iv_top_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding_size_10"
            android:layout_marginRight="@dimen/margin_Size10"
            android:scaleType="center"
            android:src="@drawable/title_btn_menu" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网址："/>
            <EditText
                android:id="@+id/et_web_addr"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/sp_web_addr"
                android:layout_width="40dp"
                android:layout_height="40dp">

            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号："/>
            <EditText
                android:id="@+id/et_web_account"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/sp_web_account"
                android:layout_width="40dp"
                android:layout_height="40dp">
            </Spinner>
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码："/>
        <EditText
            android:id="@+id/et_web_pwd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/sp_web_pwd"
            android:layout_width="40dp"
            android:layout_height="40dp">

        </Spinner>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关联邮箱："/>
            <EditText
                android:id="@+id/et_conn_email"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/sp_conn_email"
                android:layout_width="40dp"
                android:layout_height="40dp">

            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关联手机号："/>
            <EditText
                android:id="@+id/et_conn_phone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/sp_conn_phone"
                android:layout_width="40dp"
                android:layout_height="40dp">

            </Spinner>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true">


        <Button
            android:id="@+id/btn_add"
            android:background="@drawable/search_shape"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="添加"/>
        <Button
            android:id="@+id/btn_cancel"
            android:background="@drawable/search_shape"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:text="取消"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>